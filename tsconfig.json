    "noImplicitAny": true,
    "noEmitOnError": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "lib",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ]
}